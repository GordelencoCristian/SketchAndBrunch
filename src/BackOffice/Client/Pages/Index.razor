@page "/"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject NavigationManager Navigation
<link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<link href="_content/MudBlazor.ThemeManager/MudBlazorThemeManager.css" rel="stylesheet" />

<PageTitle>Sketch & Brunch</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-5">
    <AuthorizeView>
        <Authorized>
            <MudPaper Class="pa-4">
                <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">Hello, @context.User.Identity.Name!</MudText>
                <MudText Typo="Typo.body1" Align="Align.Center" GutterBottom="true">Welcome to Sketch & Brunch. Enjoy your stay!</MudText>
            </MudPaper>
        </Authorized>
        <Authorizing>
            <MudText Typo="Typo.h4" Align="Align.Center">Loading ...</MudText>
        </Authorizing>
    </AuthorizeView>
</MudContainer>

